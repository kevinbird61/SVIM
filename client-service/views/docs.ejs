						<table class="table table-striped">
							<thead>
							<tr>
								<th>#</th>
								<th>Parameter Name</th>
								<th>Parameter Type</th>
							</tr>
							</thead>
						<tbody>
						<% for(var v_index in api.pet[index].param){ %>
						<tr>
						  <th scope="row"><%= v_index %></th>
						  <td><%= api.pet[index].param[v_index].param_name %></td>
						  <td><%= api.pet[index].param[v_index].param_type %></td>
						</tr>
						<% } %>
						</tbody>
						</table>
					<% } %>
                </ol>
                <hr>
                <% } %>
            </div>
        </div>
    </div>
    <!-- Debug part -->
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-triangle-right"></span> Debug/測試
            </div>
