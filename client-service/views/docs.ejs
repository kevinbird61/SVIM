<html>
<head>
    <!-- Template -->
    <% include ../elements/meta %>
    <% include ../elements/lib %>
</head>
<header>
    <!-- Navbar goes here -->

</header>
<body>
<div class="container">
    <!-- Purpose -->
    <h2> SVIM-Server RESTFUL API 使用介紹 </h2>
    <p> <%= api.version %> </p>
    <!-- User part -->
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-triangle-right"></span> 使用者部分
            </div>
            <div class="panel-body">
                <% for(var index in api.user){ %>
                <div class="input-group">
					<span class="input-group-btn">
					<% if(api.user[index].method == "GET"){ %>
						<button class="btn btn-success" type="button"><%= api.user[index].method %></button>
					<% }else if(api.user[index].method == "POST"){ %>
						<button class="btn btn-info" type="button"><%= api.user[index].method %></button>
					<% } %>
					</span>
                    <span class="input-group-addon"><i class="fa fa-code" aria-hidden="true"></i><strong> <%= api.user[index].usage %> </strong></span>
                    <input type="text" class="form-control" placeholder="user-add" aria-describedby="basic-addon1" value="<%= api.user[index].url %>" readonly="true">
                </div>
                <br>
                <ol>
                    <ul> Error response : <kbd><%= api.user[index].error %></kbd> </ul>
                    <hr>
                    <ul> Success response : <kbd><%= api.user[index].success %></kbd> </ul>
					<% if(api.user[index].method == "POST"){ %>
					<hr>
                    <ul> Parameters/Variables : </ul>
						<table class="table table-striped">
							<thead>
							<tr>
								<th>Parameter Name</th>
								<th>Parameter Type</th>
							</tr>
							</thead>
						<tbody>
						<% for(var v_index in api.user[index].param){ %>
						<tr>
						  <td><%= api.user[index].param[v_index].param_name %></td>
						  <td><%= api.user[index].param[v_index].param_type %></td>
						</tr>
						<% } %>
						</tbody>
						</table>
					<% } %>
                </ol>
                <hr>
                <% } %>
            </div>
        </div>
    </div>
    <hr>
    <!-- Data part -->
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-triangle-right"></span> 資料同步
            </div>
            <div class="panel-body">
                <% for(var index in api.data){ %>
                <div class="input-group">
					<span class="input-group-btn">
