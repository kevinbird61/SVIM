							<thead>
							<tr>
								<th>#</th>
								<th>Parameter Name</th>
								<th>Parameter Type</th>
							</tr>
							</thead>
						<tbody>
						<% for(var v_index in api.debug[index].param){ %>
						<tr>
						  <th scope="row"><%= v_index %></th>
						  <td><%= api.debug[index].param[v_index].param_name %></td>
						  <td><%= api.debug[index].param[v_index].param_type %></td>
						</tr>
						<% } %>
						</tbody>
						</table>
					<% } %>
                </ol>
                <hr>
                <% } %>
            </div>
        </div>
    </div>

</div> <!-- Container End -->
</body>
</html>
