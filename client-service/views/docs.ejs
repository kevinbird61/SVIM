						<button class="btn btn-success" type="button"><%= api.data[index].method %></button>
					<% }else if(api.data[index].method == "POST"){ %>
						<button class="btn btn-info" type="button"><%= api.data[index].method %></button>
					<% } %>
					</span>
                    <span class="input-group-addon"><i class="fa fa-code" aria-hidden="true"></i><strong> <%= api.data[index].usage %> </strong></span>
                    <input type="text" class="form-control" placeholder="user-add" aria-describedby="basic-addon1" value="<%= api.data[index].url %>" readonly="true">
                </div>
                <br>
                <ol>
                    <ul> Error response : <kbd><%= api.data[index].error %></kbd> </ul>
                    <hr>
                    <ul> Success response : <kbd><%= api.data[index].success %></kbd> </ul>
					<% if(api.data[index].method == "POST"){ %>
					<hr>
					<ul> Parameters/Variables : </ul>
						<table class="table table-striped">
							<thead>
							<tr>
								<th>Parameter Name</th>
								<th>Parameter Type</th>
							</tr>
							</thead>
						<tbody>
						<% for(var v_index in api.data[index].param){ %>
						<tr>
						  <td><%= api.data[index].param[v_index].param_name %></td>
						  <td><%= api.data[index].param[v_index].param_type %></td>
						</tr>
						<% } %>
						</tbody>
						</table>
					<% } %>
                </ol>
                <hr>
                <% } %>
            </div>
        </div>
    </div>
	<!-- Pet part -->
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <span class="glyphicon glyphicon-triangle-right"></span> 寵物系統
            </div>
            <div class="panel-body">
                <% for(var index in api.pet){ %>
                <div class="input-group">
					<span class="input-group-btn">
